
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <label>Username:</label> <input name="username" /><br />
    <label>Password:</label> <input name="password" type="password" /><br />
    <input type="submit" value="Login" />
    <div style="color:red">@ViewBag.Message</div>
}
